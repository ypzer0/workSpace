<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ZdCategoryDao">

    <resultMap type="com.platform.entity.ZdCategoryEntity" id="ZdcategoryMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="goodsId" column="goods_id"/>
        <result property="keywords" column="keywords"/>
        <result property="parentId" column="parent_id"/>
    </resultMap>
	
	<select id="selectCategory" resultType="java.lang.String">
		select `name` categoryName from zd_category 
	</select>
	
	<select id="queryObject" resultType="com.platform.entity.ZdCategoryEntity">
		select
			`id`,
			`name`,
			`goods_id`,
			`keywords`,
			`parent_id`
		from zd_category
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.ZdCategoryEntity">
		select
    		`id`,
    		`name`,
    		`goods_id`,
    		`keywords`,
    		`parent_id`
		from zd_category
		WHERE 1=1
		<if test="name != null and name.trim() != ''">
			AND name LIKE concat('%',#{name},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from zd_category
		WHERE 1=1
        <if test="name != null and name.trim() != ''">
            AND name LIKE concat('%',#{name},'%')
        </if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.ZdCategoryEntity" useGeneratedKeys="true" keyProperty="id">
		insert into zd_category(
			`name`,
			`goods_id`,
			`keywords`,
			`parent_id`)
		values(
			#{name},
			#{goodsId},
			#{keywords},
			#{parentId})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.ZdCategoryEntity">
		update zd_category 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="goodsId != null">`goods_id` = #{goodsId}, </if>
			<if test="keywords != null">`keywords` = #{keywords}, </if>
			<if test="parentId != null">`parent_id` = #{parentId}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from zd_category where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from zd_category where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>