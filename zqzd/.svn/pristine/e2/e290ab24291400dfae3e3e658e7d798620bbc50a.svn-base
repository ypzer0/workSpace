<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.platform.dao.ZdDoctorDao">

    <resultMap type="com.platform.entity.ZdDoctorEntity" id="ZddoctorMap">
        <result property="id" column="id"/>
        <result property="doctorName" column="doctor_name"/>
        <result property="departmentId" column="department_id"/>
        <result property="handlerId" column="handler_id"/>
        <result property="addTime" column="add_time"/>
        <result property="isDelete" column="is_delete"/>
    </resultMap>

	<select id="queryObject" resultType="com.platform.entity.ZdDoctorEntity">
		select
			`id`,
			`doctor_name`,
			`department_id`,
			`handler_id`,
			`add_time`,
			`is_delete`
		from zd_doctor
		where id = #{id}
	</select>

	<select id="queryList" resultType="com.platform.entity.ZdDoctorEntity">
		select 
			t1.`id`,
			t1.`department_id`,
			t1.`handler_id`,
			t1.`add_time`,
    		t1.`doctor_name`,
    		t2.department_name,
    		t3.hospital_name 
		from zd_doctor t1,zd_department t2,zd_hospital t3 
		WHERE t1.department_id = t2.id 
		AND t2.hospital_id=t3.id 
		<if test="hospitalName != null and hospitalName.trim() != ''">
			AND t3.hospital_name LIKE concat('%',#{hospitalName},'%')
		</if>
		<if test="departmentName != null and departmentName.trim() != ''">
			AND t2.department_name LIKE concat('%',#{departmentName},'%')
		</if>
		<if test="doctorName != null and doctorName.trim() != ''">
			AND t1.doctor_name LIKE concat('%',#{doctorName},'%')
		</if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by t1.`add_time` desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from zd_doctor t1,zd_department t2,zd_hospital t3 
		WHERE t1.department_id = t2.id 
		AND t2.hospital_id=t3.id 
		<if test="hospitalName != null and hospitalName.trim() != ''">
			AND t3.hospital_name LIKE concat('%',#{hospitalName},'%')
		</if>
		<if test="departmentName != null and departmentName.trim() != ''">
			AND t2.department_name LIKE concat('%',#{departmentName},'%')
		</if>
		<if test="doctorName != null and doctorName.trim() != ''">
			AND t1.doctor_name LIKE concat('%',#{doctorName},'%')
		</if>
	</select>
	 
	<insert id="save" parameterType="com.platform.entity.ZdDoctorEntity" useGeneratedKeys="true" keyProperty="id">
		insert into zd_doctor(
			`doctor_name`,
			`department_id`,
			`handler_id`,
			`add_time`,
			`is_delete`)
		values(
			#{doctorName},
			#{departmentId},
			#{handlerId},
			#{addTime},
			#{isDelete})
	</insert>
	 
	<update id="update" parameterType="com.platform.entity.ZdDoctorEntity">
		update zd_doctor 
		<set>
			<if test="doctorName != null">`doctor_name` = #{doctorName}, </if>
			<if test="departmentId != null">`department_id` = #{departmentId}, </if>
			<if test="handlerId != null">`handler_id` = #{handlerId}, </if>
			<if test="addTime != null">`add_time` = #{addTime}, </if>
			<if test="isDelete != null">`is_delete` = #{isDelete}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete">
		delete from zd_doctor where id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from zd_doctor where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>